#task3 - need to search with match_phrase for oz and ounces and the hits should be the same

PUT _template/task3template
{
  "mappings": {
    "properties": {
      "name": {
        "type": "text",
        "analyzer": "myanalyzer"
      }
    }
  }, 
  "index_patterns": [
    "task33"
  ],
  "settings": {
    "index": {
      "analysis": {
        "analyzer": {
          "myanalyzer": {
            "type": "custom",
            "tokenizer": "lowercase",
            "char_filter": [
              "oz"
            ]
          }
        },
        "char_filter": {
          "oz": {
            "type": "mapping",
            "mappings": [
              "oz => ounces",
              "ounces => oz"
            ]
          }
        }
      }
    }
  }
}

POST _reindex
{
  "source": {
    "index": "task3"
  }
  , "dest": {
    "index": "task33"
  }
}

GET task33/_search
{
  "query": {
    "match_phrase": {
      "name": "oz"
    }
  }
}

GET task33
DELETE task33
GET task3/_search
